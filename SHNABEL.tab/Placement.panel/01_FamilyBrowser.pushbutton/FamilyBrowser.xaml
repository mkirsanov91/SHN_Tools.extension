<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SHN Approved Families"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Hover + selected style for list items -->
        <Style TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE8E8E8"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFCCE5FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель: выбор категории + поиск -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Category:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="categoryCombo"
                      Width="250"
                      SelectionChanged="categoryCombo_SelectionChanged"/>

            <TextBlock Text="Search:"
                       VerticalAlignment="Center"
                       Margin="15,0,5,0"/>
            <TextBox x:Name="searchBox"
                     Width="220"
                     VerticalAlignment="Center"
                     TextChanged="searchBox_TextChanged"/>
        </StackPanel>

        <!-- Список семейств -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="familyList"
                     HorizontalContentAlignment="Stretch"
                     Margin="0,0,0,5"/>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Right">
            <Button Content="Refresh Library"
                    Width="120"
                    Margin="0,0,5,0"
                    Click="refresh_button_click"/>
            <Button x:Name="loadButton"
                    Content="Load into Project"
                    Width="150"
                    Margin="0,0,5,0"
                    Click="load_button_click"/>
            <Button Content="Close"
                    Width="80"
                    Click="close_button_click"/>
        </StackPanel>

    </Grid>
</Window>
