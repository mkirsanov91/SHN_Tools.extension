<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SHN Family Browser"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FFF5F5F5">

    <Window.Resources>
        
        <!-- =============================================== -->
        <!-- Ð¡Ð¢Ð˜Ð›Ð˜ Ð”Ð›Ð¯ Ð¡ÐžÐ’Ð Ð•ÐœÐ•ÐÐÐžÐ“Ðž UI -->
        <!-- =============================================== -->
        
        <!-- Ð¡Ñ‚Ð¸Ð»ÑŒ Ð´Ð»Ñ ÐºÐ°Ñ€Ñ‚Ð¾Ñ‡ÐµÐº ÑÐµÐ¼ÐµÐ¹ÑÑ‚Ð² -->
        <Style x:Key="FamilyCardStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <!-- NOTE: In pyRevit DynamicXamlReader, objects inside Border.Effect
                                     are not addressable via TargetName in triggers.
                                     So we don't name the DropShadowEffect and instead swap the whole
                                     Effect object in triggers. -->
                                <DropShadowEffect Color="#40000000"
                                                  BlurRadius="8"
                                                  ShadowDepth="2"
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover ÑÑ„Ñ„ÐµÐºÑ‚ -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFF8F9FA"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF2196F3"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#40000000"
                                                          BlurRadius="12"
                                                          ShadowDepth="3"
                                                          Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Selected ÑÑ„Ñ„ÐµÐºÑ‚ -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE3F2FD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF1976D2"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ð¡Ñ‚Ð¸Ð»ÑŒ Ð´Ð»Ñ ÐºÐ½Ð¾Ð¿Ð¾Ðº -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#60000000" BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFBDBDBD"/>
                                <Setter Property="Foreground" Value="#FF757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ð¡Ñ‚Ð¸Ð»ÑŒ Ð´Ð»Ñ Ð²Ñ‚Ð¾Ñ€Ð¸Ñ‡Ð½Ñ‹Ñ… ÐºÐ½Ð¾Ð¿Ð¾Ðº -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFFAFAFA"/>
            <Setter Property="Foreground" Value="#FF424242"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#FFE0E0E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFEEEEEE"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFBDBDBD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ð¡Ñ‚Ð¸Ð»ÑŒ Ð´Ð»Ñ ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Ð¡Ñ‚Ð¸Ð»ÑŒ Ð´Ð»Ñ TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- Ð“Ð»Ð°Ð²Ð½Ñ‹Ð¹ ÐºÐ¾Ð½Ñ‚ÐµÐ¹Ð½ÐµÑ€ Ñ Ñ‚ÐµÐ½ÑŒÑŽ Ð´Ð»Ñ "Ð¼Ð°Ñ‚ÐµÑ€Ð¸Ð°Ð»ÑŒÐ½Ð¾ÑÑ‚Ð¸" -->
        <Border Background="White" CornerRadius="0" Margin="0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
                    <RowDefinition Height="Auto"/>  <!-- Ð¤Ð¸Ð»ÑŒÑ‚Ñ€Ñ‹ -->
                    <RowDefinition Height="*"/>     <!-- Ð¡Ð¿Ð¸ÑÐ¾Ðº -->
                    <RowDefinition Height="Auto"/>  <!-- Ð¡Ñ‚Ð°Ñ‚ÑƒÑ Ð±Ð°Ñ€ -->
                    <RowDefinition Height="Auto"/>  <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ -->
                </Grid.RowDefinitions>

                <!-- =============================================== -->
                <!-- Ð—ÐÐ“ÐžÐ›ÐžÐ’ÐžÐš -->
                <!-- =============================================== -->
                <Border Grid.Row="0" 
                        Background="#FF2196F3" 
                        CornerRadius="6"
                        Padding="15,12"
                        Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="ðŸ“š" 
                                       FontSize="24" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="SHN Family Browser" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="White"/>
                                <TextBlock Text="Browse and load approved families" 
                                           FontSize="11" 
                                           Foreground="#BBDEFF"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Column="1"
                                   x:Name="versionText"
                                   Text="v1.1"
                                   FontSize="11"
                                   Foreground="#99FFFFFF"
                                   VerticalAlignment="Bottom"
                                   Margin="10,0,0,0"/>
                    </Grid>
                </Border>

                <!-- =============================================== -->
                <!-- ÐŸÐÐÐ•Ð›Ð¬ Ð¤Ð˜Ð›Ð¬Ð¢Ð ÐžÐ’ -->
                <!-- =============================================== -->
                <Border Grid.Row="1" 
                        Background="#FFFAFAFA"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12,10"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ÐšÐ°Ñ‚ÐµÐ³Ð¾Ñ€Ð¸Ñ -->
                        <TextBlock Grid.Column="0" 
                                   Text="ðŸ·ï¸ Category:" 
                                   VerticalAlignment="Center" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1"
                                  x:Name="categoryCombo"
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="categoryCombo_SelectionChanged"/>

                        <!-- ÐŸÐ¾Ð¸ÑÐº -->
                        <TextBlock Grid.Column="3"
                                   Text="ðŸ” Search:"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,10,0"/>
                        <TextBox Grid.Column="4"
                                 x:Name="searchBox"
                                 Style="{StaticResource ModernTextBox}"
                                 TextChanged="searchBox_TextChanged"
                                 ToolTip="Search by family name or description"/>
                    </Grid>
                </Border>

                <!-- =============================================== -->
                <!-- Ð¡ÐŸÐ˜Ð¡ÐžÐš Ð¡Ð•ÐœÐ•Ð™Ð¡Ð¢Ð’ -->
                <!-- =============================================== -->
                <Border Grid.Row="2"
                        Background="White"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Margin="0,0,0,10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="5">
                        <ListBox x:Name="familyList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch"
                                 ItemContainerStyle="{StaticResource FamilyCardStyle}"
                                 MouseDoubleClick="familyList_DoubleClick"/>
                    </ScrollViewer>
                </Border>

                <!-- =============================================== -->
                <!-- Ð¡Ð¢ÐÐ¢Ð£Ð¡ Ð‘ÐÐ  -->
                <!-- =============================================== -->
                <Border Grid.Row="3"
                        Background="#FFFAFAFA"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10,6"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   x:Name="statusText"
                                   Text="ðŸ“Š Loading families..."
                                   FontSize="11"
                                   Foreground="#FF616161"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                                   x:Name="countText"
                                   Text="0 families"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="#FF2196F3"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- =============================================== -->
                <!-- ÐšÐÐžÐŸÐšÐ˜ -->
                <!-- =============================================== -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    
                    <Button Content="ðŸ”„ Refresh Library"
                            Width="140"
                            Margin="0,0,8,0"
                            Style="{StaticResource SecondaryButton}"
                            Click="refresh_button_click"
                            ToolTip="Rebuild family index from library"/>
                    
                    <Button x:Name="loadButton"
                            Content="â¬‡ï¸ Load into Project"
                            Width="160"
                            Margin="0,0,8,0"
                            Style="{StaticResource ModernButton}"
                            Click="load_button_click"
                            ToolTip="Load selected family into current project"/>
                    
                    <Button Content="âŒ Close"
                            Width="90"
                            Style="{StaticResource SecondaryButton}"
                            Click="close_button_click"
                            ToolTip="Close Family Browser"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
